// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  custid      String    @unique
  email       String    @unique
  role        String    @default("user")
  joinedDate  DateTime  @default(now())
}

model Team {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  custid      String    @unique
  email       String    @unique
  name        String
  branch      String
  role        String
  linkedin    String?
  github      String?
  imageLink   String?
}

model Event{
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  eventname   String
  category    String
  date        DateTime  @default(now())
  registered  Int?
  organizers  String
  description String
  imageLink   String?
}